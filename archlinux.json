{
  "variables": {
    "iso_url": "https://mirrors.kernel.org/archlinux/iso/2019.09.01/archlinux-2019.09.01-x86_64.iso",
    "iso_checksum_url": "https://mirrors.kernel.org/archlinux/iso/2019.09.01/sha1sums.txt",
    "iso_checksum_type": "sha1",
    "ssh_timeout": "20m",
    "country": "US",
    "headless": "false"
  },
  "builders": [
    {
      "type": "parallels-iso",
      "parallels_tools_flavor": "lin",
      "parallels_tools_mode": "attach",
      "guest_os_type": "linux-2.6",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory": "srv",
      "boot_wait": "5s",
      "version": "16",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 60480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo shutdown -P 0"
    },
    {
      "type": "virtualbox-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "http_directory": "srv",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 60480,
      "hard_drive_interface": "sata",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo shutdown -P 0",
      "headless": "{{ user `headless`}}",
      "iso_interface": "sata",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--firmware",
          "efi"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory": "srv",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 64576,
      "memory": 2048,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo shutdown -P 0",
      "headless": "{{ user `headless`}}",
      "cdrom_adapter_type": "sata",
      "version": 16,
      "guest_os_type": "other4xlinux-64",
      "vmx_template_path": "./archlinux_vmx_template.vmx"
    },
    {
      "type": "qemu",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory": "srv",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./enable-ssh.sh<enter>"
      ],
      "disk_size": 60480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "shutdown_command": "sudo shutdown -P 0",
      "headless": "{{ user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./bootstrap_iso.sh",
      "execute_command": "sudo sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/setup.yml",
      "playbook_dir": "./ansible",
      "extra_arguments": [
        "--connection chroot --extra-vars 'chroot_exe=arch-chroot chroot_executable=/bin/bash username=kevin password=test'"
      ]
    },
    {
      "type": "shell-local",
      "inline": [
        "umount -R /mnt"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant"
    }
  ]
}
